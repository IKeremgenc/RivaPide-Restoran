@model UpdateSliderDto

@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-header">
    <h3 class="page-title">Form elements</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Forms</a></li>
            <li class="breadcrumb-item active" aria-current="page"> Form elements </li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Default form</h4>
                <p class="card-description">Basic form layout</p>
                <form method="post" class="forms-sample">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Öne Çıkan Alan Girişi</div>
                        </div>
                        <input type="hidden" asp-for="SliderID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title1">1.Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title1" id="Title1">
                            </div>
                        </div>
                        
                        
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description1">1.Açıklamayı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description1" id="Description1">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="NewImage">Yeni Resim Seç</label>
                                <input type="file" class="form-control-file" id="NewImage" name="NewImage" onchange="showFileName()">
                            </div>

                        </div>
                        
                        <div class="card-body">
                            <button class="btn btn-primary">Öne Çıkan Alanı Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    function showFileName() {
        var input = document.getElementById('NewImage');
        var output = document.getElementById('SelectedFileName');
        output.textContent = input.files[0].name;
    }
</script>