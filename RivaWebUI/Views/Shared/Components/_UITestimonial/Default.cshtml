@model List<ResultTestimonialDto>
<hr />
<style>
    .client_section {
        .heading_container

    {
        justify-content: center;
        margin-bottom: 25px;
    }

    .detail-box {
        text-align: center;
        margin: 25px 35px;
        padding: 45px 65px 35px 65px;
        box-shadow: 0px 0px 20px 0 rgba(0, 0, 0, 0.2);
        h4

    {
        font-weight: bold;
    }

    p {
        margin-top: 15px;
        margin-bottom: 25px;
    }

    }

    .carousel-control-prev,
    .carousel-control-next {
        top: 50%;
        width: 65px;
        height: 65px;
        border: none;
        border-radius: 100%;
        opacity: 1;
        background-repeat: no-repeat;
        background-size: 10px;
        background-position: center;
        background-color: #1a2e35;
        margin: 2px;
        transform: translateY(-50%);
    }

    .carousel-control-prev {
        background-image: url(/spering-html/images/prev-angle.png);
    }

    .carousel-control-next {
        background-image: url(/spering-html/images/next-angle.png);
    }

    }
</style>
<section class="client_section layout_padding" id="Yorumlar">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-10 mx-auto">
                <div class="heading_container">
                    <h2 class="text-lg-center">
                        Yorumlar
                    </h2>
                </div>
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">

                        @foreach (var item in Model)
                        {
                            <div class="carousel-item @((item == Model.First()) ? "active" : "")">
                                <div class="detail-box">
                                    <h4>
                                        @item.Name
                                    </h4>
                                    <p>
                                        @if (item.Comment.Length > 250)
                                        {
                                            @item.Comment.Substring(0, 250)
                                           
                                        }
                                        else
                                        {
                                            @item.Comment
                                          
                                        }
                                    </p>
                                  
                                </div>
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<hr />

