<script>
    function showFileName(input) {
        var fileName = input.value.split('\\').pop();
        var label = input.parentElement.nextElementSibling;
        label.innerText = fileName;
    }

    // Toastr mesajını gösteren fonksiyon
    function showToast(message, type) {
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000"
        };
        toastr[type](message);
    }

    // Form submit olduğunda toastr mesajını göster
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelector('form').addEventListener('submit', function (event) {
            event.preventDefault(); // Sayfa yenilemesini önle
            showToast("Hakkımda yazısı başarıyla oluşturuldu.", "success");
            this.submit(); // Formu gönder
        });
    });
</script>
