@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-header">
    <h3 class="page-title">Yorumlar </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Testimonial/Index/">Yorumlar</a></li>
            <li class="breadcrumb-item active" aria-current="page"> Yorum Güncelle  </li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
           
                <form method="post" class="forms-sample">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Müşteri Yorumu Ekleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="TestimonialID" />
                            <div class="form-group">
                                <label for="Name">Müşteri Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Müşteri Ünvanını Giriniz</label>
                                <textarea class="form-control" asp-for="Comment" id="Title" rows="5"></textarea>
                            </div>
                        </div>

                    
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Comment">Müşteri Yorumunu Giriniz</label>
                                <input type="text" class="form-control" asp-for="Comment" id="Comment">
                            </div>
                        </div>
                        <div class="card-body">
                            <button class="btn btn-primary">Yorumu Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
