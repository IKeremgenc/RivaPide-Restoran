@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<style>
    .form-control:focus {
        outline: none;
        box-shadow: none;
        border: none;
    }
</style>
<div class="page-header">
    <h3 class="page-title">Yorum Oluştur </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Testimonial/Index/">Yorumlar</a></li>
            <li class="breadcrumb-item active" aria-current="page"> Yorumlar Oluşturucu </li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
          
                <form method="post" class="forms-sample">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Müşteri Yorumu Ekleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Name">Müşteri Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name">
                            </div>
                        </div>
              
                  
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Comment">Müşteri Yorumunu Giriniz</label>
                                <input type="text" class="form-control" asp-for="Comment" id="Comment">
                            </div>
                        </div>
                        <div class="card-body">
                            <button class="btn btn-primary">Yorumu Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
